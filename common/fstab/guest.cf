body file control

{

  namespace => "cryptoo";

  inputs => {
              "cryptoo/config/directory_names.cf",
              "cryptoo/config/file_groups.cf"
            };
}

bundle agent fstab_guest(role)

{

  vars:

    any::

      "backup"
        string => "$(file_groups.backup_dir[$(this.role)])";

      "fstab_json[001]"
        string => '
          {
            "source": "/dev/vda",
            "target": "/",
            "type": "$(site.config[guest_fs][filesystem])",
            "options": "$(site.config[guest_fs][options])",
            "dump": "0",
            "pass": "1"
          }';

      "fstab_json[002]"
        string => '
          {
            "source": "/bin",
            "target": "/$(directory_names.site_apps)",
            "type": "9p",
            "options": "trans=virtio,version=9p2000.L,msize=262144ro",
            "dump": "0",
            "pass": "0"
          }';

      "fstab_json[003]"
        string => '
          {
            "source": "/backup",
            "target": "$(backup)",
            "type": "9p",
            "options": "trans=virtio,version=9p2000.L,msize=262144rw,cache=mmap",
            "dump": "0",
            "pass": "0"
          }';

      "fstab_json[004]"
        string => '
          {
            "source": "/cryptoo",
            "target": "/$(directory_names.cryptoo)",
            "type": "9p",
            "options": "trans=virtio,version=9p2000.L,msize=262144ro",
            "dump": "0",
            "pass": "0"
          }';

      "fstab_json[005]"
        string => '
          {
            "source": "/distfiles",
            "target": "/$(directory_names.site_srcpkg)",
            "type": "9p",
            "options": "trans=virtio,version=9p2000.L,msize=262144ro",
            "dump": "0",
            "pass": "0"
          }';

      "fstab_json[006]"
        string => '
          {
            "source": "/inbox",
            "target": "/$(directory_names.config_cryptoo_incoming)",
            "type": "9p",
            "options": "trans=virtio,version=9p2000.L,msize=262144ro",
            "dump": "0",
            "pass": "0"
          }';

      "fstab_json[007]"
        string => '
          {
            "source": "/layman",
            "target": "/$(directory_names.volatile_overlay)",
            "type": "9p",
            "options": "trans=virtio,version=9p2000.L,msize=262144ro",
            "dump": "0",
            "pass": "0"
          }';

      "fstab_json[008]"
        string => '
          {
            "source": "/outbox",
            "target": "/$(directory_names.config_cryptoo_outgoing)",
            "type": "9p",
            "options": "trans=virtio,version=9p2000.L,msize=262144rw",
            "dump": "0",
            "pass": "0"
          }';

      "fstab_json[009]"
        string => '
          {
            "source": "/packages",
            "target": "/$(directory_names.site_binpkg)",
            "type": "9p",
            "options": "trans=virtio,version=9p2000.L,msize=262144ro",
            "dump": "0",
            "pass": "0"
          }';

      "fstab_json[010]"
        string => '
          {
            "source": "/portage",
            "target": "/$(directory_names.standard_pm)",
            "type": "9p",
            "options": "trans=virtio,version=9p2000.L,msize=262144ro",
            "dump": "0",
            "pass": "0"
          }';

      "fstab_json[011]"
        string => '
          {
            "source": "/portage-local",
            "target": "/$(directory_names.site_pm)",
            "type": "9p",
            "options": "trans=virtio,version=9p2000.L,msize=262144ro",
            "dump": "0",
            "pass": "0"
          }';

      "fstab_json[012]"
        string => '
          {
            "source": "/src",
            "target": "/$(directory_names.site_sources)",
            "type": "9p",
            "options": "trans=virtio,version=9p2000.L,msize=262144ro",
            "dump": "0",
            "pass": "0"
          }';

      "fstab_json[013]"
        string => '
          {
            "source": "/storage",
            "target": "/$(directory_names.mount_shared)",
            "type": "9p",
            "options": "trans=virtio,version=9p2000.L,msize=262144rw,cache=mmap,noexec",
            "dump": "0",
            "pass": "0"
          }';

      "fstab_json[014]"
        string => '
          {
            "source": "/temp",
            "target": "/$(directory_names.volatile_temp)",
            "type": "9p",
            "options": "trans=virtio,version=9p2000.L,msize=262144rw,cache=mmap,nofail",
            "dump": "0",
            "pass": "0"
          }';

      "fstab_json[015]"
        string => '
          {
            "source": "portage-tmp",
            "target": "/$(directory_names.volatile_portage)",
            "type": "tmpfs",
            "options": "size=1G,nofail",
            "dump": "0",
            "pass": "0"
          }';

      "fstab_json[016]"
        string => '
          {
            "source": "/",
            "target": "/$(directory_names.mount_root)",
            "type": "none",
            "options": "bind",
            "dump": "0",
            "pass": "0"
          }';

      "fstab_list"
        slist => getindices("fstab_json");

  reports:

    any::

      "$(fstab_json[$(fstab_list)])"
        bundle_return_value_index => "$(fstab_list)";

}
