        classes => default:if_ok("have_guest_json_list_vpndmz");

    have_extra_lan_guests::

      "extra_rules_json_lan"
        string => join(", ", "extra_lan_json_list");

    have_extra_vpndmz_guests::

      "extra_rules_json_vpndmz"
