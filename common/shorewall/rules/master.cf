      "extra_rules_json_lan"
        string => "";

    !have_guests_vpndmz::

      "extra_rules_json_vpndmz"
        string => "";

    have_guests_lan::

      "extra_lan_guest_list"
        slist => getindices("extra_guest_lan"),
        classes => default:if_ok("have_guest_list_lan");

    have_guests_vpndmz::

      "extra_vpndmz_guest_list"
        slist => getindices("extra_guest_vpndmz"),
        classes => default:if_ok("have_guest_list_vpndmz");

    have_extra_guest_json_lan::

      "extra_lan_json_list"
