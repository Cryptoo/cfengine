body file control

{

  namespace => "cryptoo";

  inputs => {
              "cryptoo/config/config.cf",
              "cryptoo/config/file_names.cf",
              "cryptoo/config/templates.cf",
              "cryptoo/util/perms.cf"
            };

}

bundle agent shorewall_rules_i2p(root)

{

  meta:

    "tags" slist => { "shorewall_rules", "i2p" };

  vars:

    any::

      "defined_numbers"
        data => readjson("$(sys.inputdir)/cryptoo/config/defined_numbers.json", 1M);

      "subnet_config"
        data => readjson("/$(file_names.subnet_config)", 1M);

      "rules_json"
        string => '
          {
            "new":
              [
                {
                  "action": "guest"
                },
                {
                  "action": "i2p_in",
                  "source": "net",
                  "destination": "fw:192.168.$(subnet_config[ispdmz]).$(defined_numbers[i2p])"
                },
                {
                  "action": "ACCEPT",
                  "source": "fw:192.168.$(subnet_config[ispdmz]).$(defined_numbers[i2p])",
                  "destination": "net",
                  "protocol": "-",
                  "destination_port": "-",
                  "source_port": "-",
                  "original_destination": "-",
                  "rate": "-",
                  "user": "i2p:i2p"
                },
                {
                  "action": "bob",
                  "source": "i2p",
                  "destination": "fw:192.168.$(subnet_config[i2p]).$(defined_numbers[i2p])"
                },
                {
                  "action": "bob",
                  "source": "vdmz",
                  "destination": "fw:192.168.$(subnet_config[i2p]).$(defined_numbers[i2p])"
                },
                {
                  "action": "HTTP(REDIRECT)",
                  "source": "lan",
                  "destination": "$(config.services[i2p][console_port])",
                  "protocol": "-",
                  "destination_port": "-",
                  "source_port": "-",
                  "original_destination": "192.168.$(subnet_config[i2p]).$(defined_numbers[i2p])"
                },
                {
                  "action": "POP3(REDIRECT)",
                  "source": "vdmz:192.168.$(subnet_config[vpndmz]).$(defined_numbers[mail_server])",
                  "destination": "$(config.services[i2p][pop_port])",
                  "protocol": "-",
                  "destination_port": "-",
                  "source_port": "-",
                  "original_destination": "192.168.$(subnet_config[i2p]).$(defined_numbers[i2p])"
                },
                {
                  "action": "SMTP(REDIRECT)",
                  "source": "vdmz:192.168.$(subnet_config[vpndmz]).$(defined_numbers[mail_server])",
                  "destination": "$(config.services[i2p][smtp_port])",
                  "protocol": "-",
                  "destination_port": "-",
                  "source_port": "-",
                  "original_destination": "192.168.$(subnet_config[i2p]).$(defined_numbers[i2p])"
                }
              ]
          }';

  files:

    any::

      "$(root)$(file_names.shorewall_rules)"
        perms => system,
        create => "true",
        edit_template => "/$(templates.template[shorewall_rules])",
        template_method => "mustache",
        template_data => parsejson("$(rules_json)");

}
