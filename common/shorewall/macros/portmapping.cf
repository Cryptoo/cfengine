body file control

{

  namespace => "cryptoo";

  inputs => {
              "cryptoo/config/directory_names.cf",
              "cryptoo/config/templates.cf",
              "cryptoo/util/classes.cf",
              "cryptoo/util/perms.cf"
            };

}

bundle agent shorewall_macro_portmap(root, port_info)

{

  meta:

    "tags" slist => { "shorewall_macro", "firewall_external", "vpn_primary", "firewall_internal" };

  vars:

    any::

      "macro_name"
        string => "portmapping";

      "macro_json"
        string => '
          {
            "name": "$(this.macro_name)",
            "default": "DROP",
            "rules":
                 [
                   {
                     "action": "PARAM",
                     "source": "-",
                     "destination": "fw",
                     "protocol": "tcp",
                     "destination_port": "5351",
                     "source_port": ""
                   },
                   {
                     "action": "PARAM",
                     "source": "-",
                     "destination": "fw",
                     "protocol": "udp",
                     "destination_port": "5351",
                     "source_port": ""
                   },
                   {
                     "action": "DropUPnP(PARAM)",
                     "source": "-",
                     "destination": "fw",
                     "protocol": "",
                     "destination_port": "",
                     "source_port": ""
                   }
                 ],
               }
          }
        ';

  files:

    any::

      "$(root)$(directory_names.fs_config_shorewall)/macro.$(this.macro_name)"
        perms => system,
        create => "true",
        edit_template => "/$(templates.template[shorewall_macro])",
        template_method => "mustache",
        template_data => parsejson("$(macro_json)"),
        classes => shorewall;

}
