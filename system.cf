body file control

{

  namespace => "cryptoo";

  inputs => {
              "cryptoo/common/common.cf",
              "cryptoo/host/host.cf"
            };

}

bundle agent cryptoo_system

{

  methods:

    role_undefined::

      "configure generic system"
        usebundle => cryptoo_filesystem("/", "undefined", "x86_64", "nomultilib");

    role_master::

      "configure system as a host"
        usebundle => host("x86_64");

}
