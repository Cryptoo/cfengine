      "bootstrap_guest"
        expression => "any";

    default:bootstrap_bitcoin_testnet::

      "bootstrap_guest"
        expression => "any";

  methods:

    bootstrap_master::

      "bootstrap a host"
        usebundle => bootstrap_master;

    bootstrap_guest::

      "bootstrap a new guest"
        usebundle => bootstrap_guest($(this.role), $(this.type), $(this.multilib));

  reports:

    any::

      "Bootstrapping";

}
