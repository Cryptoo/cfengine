      "type"
        string => "server";

      "multilib"
        string => "no_multilib";

    default:bootstrap_dns::

      "role"
        string => "dns";

      "type"
        string => "server";

      "multilib"
        string => "no_multilib";

    default:bootstrap_firewall_external::

      "role"
        string => "firewall_external";

      "type"
        string => "server";

      "multilib"
        string => "no_multilib";

    default:bootstrap_firewall_internal::

      "role"
        string => "firewall_internal";

      "type"
        string => "server";

      "multilib"
        string => "no_multilib";

    default:bootstrap_freenet::

      "role"
        string => "freenet";

      "type"
        string => "server";

      "multilib"
        string => "no_multilib";

    default:bootstrap_mail_server::

      "role"
        string => "mail_server";

      "type"
        string => "server";

      "multilib"
        string => "no_multilib";

    default:bootstrap_tor::

      "role"
        string => "tor";

      "type"
        string => "server";

      "multilib"
        string => "no_multilib";

    default:bootstrap_i2p::

      "role"
        string => "i2p";

      "type"
        string => "server";

      "multilib"
        string => "no_multilib";

    default:bootstrap_irc_bouncer::

      "role"
        string => "irc_bouncer";

      "type"
        string => "server";

      "multilib"
        string => "no_multilib";

    default:bootstrap_vpn_primary::

      "role"
        string => "vpn_primary";

      "type"
        string => "server";

      "multilib"
        string => "no_multilib";

    default:bootstrap_vpn_secondary::

      "role"
        string => "vpn_secondary";

      "type"
        string => "server";

      "multilib"
        string => "no_multilib";

    default:bootstrap_vpn_server::

      "role"
        string => "vpn_server";

