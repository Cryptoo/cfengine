    default:bootstrap_web::

      "role"
        string => "web";

      "type"
        string => "desktop";

      "multilib"
        string => "no_multilib";

    default:bootstrap_im::

      "role"
        string => "im";

      "type"
        string => "desktop";

      "multilib"
        string => "multilib";

    default:bootstrap_undefined::

      "role"
        string => "undefined";

      "type"
        string => "server";

      "multilib"
        string => "no_multilib";

    default:bootstrap_bitcoin_testnet::

      "role"
        string => "bitcoin_testnet";

      "type"
        string => "server";

      "multilib"
        string => "no_multilib";

  classes:

    default:bootstrap_master::

      "bootstrap_master"
        expression => "any";

    default:bootstrap_bitcoin::

      "bootstrap_guest"
        expression => "any";

    default:bootstrap_bitmessage::

      "bootstrap_guest"
        expression => "any";

    default:bootstrap_dns::

      "bootstrap_guest"
        expression => "any";

    default:bootstrap_firewall_external::

      "bootstrap_guest"
        expression => "any";

    default:bootstrap_firewall_internal::

      "bootstrap_guest"
        expression => "any";

    default:bootstrap_freenet::

      "bootstrap_guest"
        expression => "any";

    default:bootstrap_mail_server::

      "bootstrap_guest"
        expression => "any";

    default:bootstrap_tor::

      "bootstrap_guest"
        expression => "any";

    default:bootstrap_i2p::

      "bootstrap_guest"
        expression => "any";

    default:bootstrap_irc_bouncer::

      "bootstrap_guest"
        expression => "any";

    default:bootstrap_vpn_primary::

      "bootstrap_guest"
        expression => "any";

