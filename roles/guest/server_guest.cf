body file control

{

  namespace => "cryptoo";

  inputs => {
              "cryptoo/common/common.cf",
              "@(cryptoo:control.server_guest_inputs)"
            };

}

bundle agent server_guest(root, role, arch)

{

  methods:

    any::

      "manage common files"
        usebundle => cryptoo_filesystem("$(root)","$(role)","$(arch)","no_multilib");

      "manage guest files"
        usebundle => common_guest("$(root)","$(role)","$(arch)");

}
