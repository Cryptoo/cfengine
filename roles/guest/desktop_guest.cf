body file control

{

  namespace => "cryptoo";

  inputs => {
              "cryptoo/common/common.cf",
              "@(cryptoo:control.desktop_guest_inputs)"
            };

}

bundle agent desktop_guest(root, role, arch, multilib)

{

  methods:

    any::

      "manage common files"
        usebundle => cryptoo:cryptoo_filesystem("$(root)","$(role)","$(arch)","$(multilib)");

      "manage guest files"
        usebundle => cryptoo:common_guest("$(root)","$(role)","$(arch)");

}
