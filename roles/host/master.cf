body file control

{

  namespace => "cryptoo";

  inputs => {
              "cryptoo/common/systemd.cf"
            };

}

bundle agent master

{

  meta:

    "tags" slist => { "cryptoo_role" };

  methods:

    any::

      "configure system as a host"
        usebundle => cryptoo:host("x86_64");

      "configure systemd"
        usebundle => systemd("/", "master");

}
