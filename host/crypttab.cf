bundle agent crypttab

{

  vars:

    any::
    
      "luks" string => execresult("/$(file_names.blkid_app) -t TYPE=crypto_LUKS -s UUID -o value","noshell");
      "uuids" slist => string_split("$(luks)","\n",16);

  files:

    any::

      "/$(file_names.crypttab)"
        perms => root,
        create => "true",
        edit_template => "/var/cfengine/inputs/templates/cryptoo_crypttab.txt";

      "/$(file_names.dmcrypt_conf)"
        perms => root,
        create => "true",
        edit_template => "/var/cfengine/inputs/templates/cryptoo_dmcrypt.txt";

}
