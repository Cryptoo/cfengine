body file control

{

  namespace => "cryptoo";

  inputs => {
              "cryptoo/config/directory_names.cf",
              "cryptoo/config/templates.cf",
              "cryptoo/util/classes.cf",
              "cryptoo/util/perms.cf"
            };

}

bundle agent shorewall_macro_mail_server(root, port_info)

{

  meta:

    "tags" slist => {
        "shorewall_macro",
        "mail_server",
        "firewall_internal",
        "master",
        "desktop_host",
        "mail_client"
        };

  vars:

    any::

      "macro_name"
        string => "mail_server";

      "macro_json"
        string => '
          {
            "name": "$(this.macro_name)",
            "default": "ACCEPT",
            "rules":
                 [
                   {
                     "action": "IMAP(PARAM)",
                     "source": "-",
                     "destination": "-",
                     "protocol": "",
                     "destination_port": "",
                     "source_port": ""
                   },
                   {
                     "action": "IMAPS(PARAM)",
                     "source": "-",
                     "destination": "-",
                     "protocol": "",
                     "destination_port": "",
                     "source_port": ""
                   },
                   {
                     "action": "SMTP(PARAM)",
                     "source": "-",
                     "destination": "-",
                     "protocol": "",
                     "destination_port": "",
                     "source_port": ""
                   },
                   {
                     "action": "SMTPS(PARAM)",
                     "source": "-",
                     "destination": "-",
                     "protocol": "",
                     "destination_port": "",
                     "source_port": ""
                   },
                   {
                     "action": "Sieve(PARAM)",
                     "source": "-",
                     "destination": "-",
                     "protocol": "",
                     "destination_port": "",
                     "source_port": ""
                   }
                 ]
               }
          }
        ';

  files:

    any::

      "$(root)$(directory_names.config_shorewall)/macro.$(this.macro_name)"
        perms => system,
        create => "true",
        edit_template => "/$(templates.template[shorewall_macro])",
        template_method => "mustache",
        template_data => parsejson("$(macro_json)"),
        classes => shorewall;

      "$(root)$(directory_names.config_shorewall6)/macro.$(this.macro_name)"
        perms => system,
        create => "true",
        edit_template => "/$(templates.template[shorewall_macro])",
        template_method => "mustache",
        template_data => parsejson("$(macro_json)"),
        classes => restart_if_repaired("shorewall6");
}
